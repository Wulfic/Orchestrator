{
  "name": "orchestrator-extension",
  "displayName": "Orchestrator Extension",
  "description": "A VS Code extension for orchestration tasks.",
  "version": "0.0.1",
  "publisher": "wulfic",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onView:orchestratorChatView",
    "onCommand:orchestrator.runFlow",
    "onCommand:orchestrator.openLmStudioPanel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "orchestrator.runFlow",
        "title": "Run Orchestrator Workflow"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "orchestrator-sidebar",
          "title": "Orchestrator",
          "icon": "resources/orchestrator.svg"
        }
      ]
    },
    "views": {
      "orchestrator-sidebar": [
        {
          "id": "orchestratorChatView",
          "name": "Orchestrator Chat",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  }
}
